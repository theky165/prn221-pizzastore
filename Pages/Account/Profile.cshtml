@page
@model SignalRAssignment.Pages.Account.ProfileModel
@{
    ViewData["PageTitle"] = "Profile";
}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarText">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a style="color: #00008b" class="nav-link" href="~/Account/Profile">Personal information</a>
            </li>
            <li class="nav-item active">
                <a style="color: #00008b" class="nav-link" href="~/Account/Order">My order</a>
            </li>
        </ul>
        <span class="navbar-text">
            Welcome, @Model.Auth.UserName
        </span>
        <span class="navbar-text">
            <a style="color: #00008b" class="nav-link" href="~/Account/Logout">| Logout</a>
        </span>
    </div>
</nav>
<div id="content-right">
    <form method="post">
        <div class="form-group">
            <br/>
            <label for="exampleInputEmail1">Username</label>
            <input type="text" asp-for="Auth.UserName" class="form-control">
            <span class="msg-error" asp-validation-for="Auth.UserName"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Fullname</label>
            <input type="text" asp-for="Auth.FullName" class="form-control">
            <span class="msg-error" asp-validation-for="Auth.FullName"></span>
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Type</label>
            @if (@Model.Auth.Type == "1")
            {
                <input type="text" value="Staff" class="form-control" readonly>
            } else {
                <input type="text" value="User" class="form-control" readonly>
            }
            <span class="msg-error" asp-validation-for="Auth.Type"></span>
        </div>
        <button type="submit" class="btn btn-primary">Update Profile</button><br/>
        <span class="msg-error" style="color: red">@ViewData["fail"]</span>
        <span class="msg-error" style="color: red">@ViewData["success"]</span>
    </form>
</div>