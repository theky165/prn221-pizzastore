@page
@model SignalRAssignment.Pages.Admin.Member.IndexModel

@{
    ViewData["Title"] = "Member Management";
}

<h1>Member Management</h1>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
                <a class="nav-link" href="~/Admin/Orders">Order</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="~/Admin/Products">Product</a>
            </li>
            <li class="nav-item active">
                <a class="nav-link" href="~/Admin/Member">Member</a>
            </li>
        </ul>
    </div>
</nav>
<button style="margin-top: 20px; margin-bottom:20px" type="button" class="btn btn-success"><a style="color: #fff" asp-page="Create">Create New</a></button>
<table class="table table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].UserName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].FullName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Account[0].Type)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Account) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FullName)
            </td>
            <td>
                @(item.Type.ToString() == "1" ? "Staff" : "Admin")
            </td>
            <td>
                    <button type="button" class="btn btn-primary">
                        <a style="color: #fff" asp-page="./Edit" asp-route-id="@item.AccountId">Edit</a>
                    </button>
                    <button type="button" class="btn btn-info">
                        <a style="color: #fff" asp-page="./Details" asp-route-id="@item.AccountId">Details</a>
                    </button>
                    <button type="button" class="btn btn-danger">
                        <a style="color: #fff" asp-page="./Delete" asp-route-id="@item.AccountId">Delete</a>
                    </button>
            </td>
        </tr>
}
    </tbody>
</table>
